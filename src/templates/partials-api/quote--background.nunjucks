<section class="quote--background">
	<div class="quote--background_wrapper">
		<svg class="quote--backgrund_icon quote--backgrund_icon--top">
		  <use xlink:href="/icons/sprite.svg#quote-top"></use>
		</svg>

		<p class="quote--background_quote">
			{{quote}}
		</p>
		
		<svg class="quote--backgrund_icon quote--backgrund_icon--bottom">
		  <use xlink:href="/icons/sprite.svg#quote-bottom"></use>
		</svg>

		<p class="quote--background_quote-by">
			{{quoteAuthor}}
		</p>
	</div>
</section>